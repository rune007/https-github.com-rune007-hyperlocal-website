@model HLWebRole.Models.SearchNewsItemModel
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@*jQuery DatePicker plugin*@
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.base.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/EditorHookup.js")" type="text/javascript"></script>
@using (Html.BeginForm("News", "Search", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    <div class="editor-label">
        @Html.LabelFor(model => model.Address)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Address)
        @Html.ValidationMessageFor(model => model.Address)
    </div>
    <div class="editor-label">
        @Html.Label("Enter a Search Radius in kilometers:")
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.SearchRadius)
        @Html.ValidationMessageFor(model => model.SearchRadius)
    </div>    
    <div class="editor-label">
        @Html.LabelFor(model => model.CategoryID)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.CategoryID, Model.CategorySelectList, "Select Category")<br />
        @Html.ValidationMessageFor(model => model.CategoryID)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.AssignmentID)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.AssignmentID, Model.AssignmentSelectList, "Select Assignment")
    </div>  
    <div class="editor-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>   
    <div class="editor-label">
        @Html.LabelFor(model => model.Story)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Story)
        @Html.ValidationMessageFor(model => model.Story)
    </div>   
    <div class="editor-label">
        @Html.Label("Give me News Back from Date (MM/DD/YYYY):")
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.CreateUpdateDate)
        @Html.ValidationMessageFor(model => model.CreateUpdateDate)
    </div>      
    @Html.HiddenFor(model => model.Latitude)
    @Html.HiddenFor(model => model.Longitude)
    <p>
        <input type="submit" value="Search" />
    </p>
}