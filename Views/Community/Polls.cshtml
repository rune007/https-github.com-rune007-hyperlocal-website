@model IEnumerable<HLWebRole.HLServiceReference.PollDto>
@{
    ViewBag.Title = "Polls";
    Layout = "~/Views/Shared/_LayoutOneColumn.cshtml";
}
<h2>
    Polls</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<fieldset>
    <legend>
        @if (@Model.Count() > 0)
        {
            <text>Polls for community</text>
        }
        else
        {
            <text>You have no communities</text>
        }
    </legend>
    <div id="polls">
        @foreach (var item in Model)
        {
            if (item != null && !item.IsArchived && !item.HasUserVoted)
            {
                Html.RenderPartial("PollItem", item);
            }
            else
            {
                Html.RenderPartial("PollResultItem", item);
            }

        }
    </div>
</fieldset>
